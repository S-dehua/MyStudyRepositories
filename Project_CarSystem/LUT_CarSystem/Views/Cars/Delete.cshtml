@model LUT_CarSystem.Models.Car

@{
    ViewBag.Title = "Delete";
}

<h2>车辆信息删除</h2>

<h3>你确定要删除该车辆的信息吗?</h3>
<div>
    <h4>Car Infomation Delete</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Type)*@
            车种
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.CarName)*@
            车辆名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarName)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Money)*@
            日租金
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Money)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.State)*@
            租赁状态
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StringState[model.State])
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回列表", "Index", new { }, htmlAttributes: new { @class = "btn btn-info" })
        </div>
    }
</div>
